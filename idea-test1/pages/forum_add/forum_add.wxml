<!--pages/forum_add/forum_add.wxml-->
<view class="container container-gray">
	<view class="group">
		<view class="group-header">发表评论</view>
		<view class="group-body">
			<view class="input-list">
				<view class="input-item">
					<text class="input-item-label">标题</text>
					<view class="input-item-content">
						<input type="text" placeholder="请输入标题" bindinput="getDeviceTiltle"></input>
					</view>
				</view>
				<view class="input-item">
					<text class="input-item-label">内容</text>
					<view class="input-item-content">
						<input type="text" placeholder="请输入内容" bindinput="getDeviceContent"></input>
					</view>
				</view>
			</view>
		</view>
	</view>
	<view class="btn-submit">
        <button class="btn-block btn-orange" bindtap="applySubmit">提交</button>
        <button class="btn-block btn-orange" bindtap="return">返回</button>
	</view>
</view>
